<script>
    function showContent(optionTitle) {
        document.getElementById('content-title').innerText = optionTitle;
        document.getElementById('content-description').innerText = 'Details about ' + optionTitle + ' will appear here.';
        document.getElementById('content-box').style.display = 'block';
    }
</script>

